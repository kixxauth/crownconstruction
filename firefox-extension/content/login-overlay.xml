<overlay>
<div id="login">

<!-- login panel -->
<div id="login-panel" class="panel login">
  <form id="login-form" method="post">
    <img id="login-form-logo" class="login" src="weblogo.gif" width="275" height="110" />
    <h1 class="login">Enterprise Resource Management</h1>
    <p class="login input">
      <label id="login-label-username" for="username" class="login">Username:</label>
      <input id="username" name="username" class="login" type="text" />
    </p>
    <p class="login input">
      <label id="login-label-passkey" for="passkey" class="login">Passkey:</label>
      <input id="passkey" name="passkey" class="login" type="password" />
    </p>
    <p class="login submit">
      <button id="login-button" class="login">Login</button>
      <label id="label-db" for="use-fake-db" class="login">Use fake database:</label>
      <input id="use-fake-db" name="use-fake-db" type="checkbox" class="login" />
    </p>
    <p id="login-warning-box" class="login warning"></p>
    <p id="username-warning-box" class="login warning"></p>
    <p id="passkey-warning-box" class="login warning"></p>
  </form>
</div><!-- login-panel -->

</div>
</overlay>
